{
  "name": "toolbox",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build && cp -r public .next/standalone && cp -r .next/static .next/standalone/.next",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset && prisma db seed",
    "db:tunnel": "ssh -i ~/.ssh/uberspace-mktcode mktcode@alnilam.uberspace.de -N -L 3306:127.0.0.1:3306",
    "dev": "next dev",
    "postinstall": "prisma generate",
    "lint": "next lint --fix",
    "lint:ci": "next lint",
    "format": "prettier . --write",
    "start": "next start",
    "prod:update": "rsync -avz -e 'ssh -i ~/.ssh/uberspace-mktcode' .next/standalone/ mktcode@alnilam.uberspace.de:/home/mktcode/projects/toolbox.markus-kottlaender.de",
    "prod:start": "ssh -i ~/.ssh/uberspace-mktcode mktcode@alnilam.uberspace.de 'supervisorctl start toolbox.markus-kottlaender.de'",
    "prod:stop": "ssh -i ~/.ssh/uberspace-mktcode mktcode@alnilam.uberspace.de 'supervisorctl stop toolbox.markus-kottlaender.de'",
    "deploy": "npm ci && npm run build && npm run prod:stop && npm run db:push --accept-data-loss && npm run prod:update && npm run prod:start",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.70",
    "@auth/prisma-adapter": "^2.4.2",
    "@headlessui/react": "^2.1.8",
    "@heroicons/react": "^2.1.5",
    "@prisma/client": "^5.18.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tanstack/react-query": "^5.59.13",
    "@trpc/client": "^11.0.0-rc.584",
    "@trpc/react-query": "^11.0.0-rc.584",
    "@trpc/server": "^11.0.0-rc.485",
    "@uidotdev/usehooks": "^2.4.1",
    "@unleash/nextjs": "^1.4.4",
    "ai": "^3.4.23",
    "geist": "^1.3.0",
    "js-tiktoken": "^1.0.15",
    "next": "^14.2.13",
    "next-auth": "^4.24.10",
    "openai": "^4.67.2",
    "react": "^18.3.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "server-only": "^0.0.1",
    "stripe": "^17.2.1",
    "superjson": "^2.2.1",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.8",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.12",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.8",
    "postcss": "^8.4.44",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prisma": "^5.21.1",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.36.1"
  },
  "packageManager": "npm@10.7.0",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=20.16.0 <22.7"
  }
}
